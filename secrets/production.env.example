# PRODUCTION SECRETS FOR MESHTRACKING ALL-IN-ONE
# Copy this file to production.env and replace placeholder values

# Database Configuration (Internal PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meshtastic
DB_USER=meshuser
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# MQTT Configuration (Internal Mosquitto)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USER=meshlocal
MQTT_PASS=YOUR_SECURE_MQTT_PASSWORD_HERE
MQTT_TOPIC=msh/#

# API Configuration
NODE_API_KEY=YOUR_SECURE_API_KEY_HERE

# Global MQTT Bridge (mqtt.meshtastic.org)
MQTT_BRIDGE_USER=meshdev
MQTT_BRIDGE_PASS=YOUR_MESHTASTIC_ORG_PASSWORD

# Device Manager Configuration
DISCOVERY_INTERVAL=60
POLL_INTERVAL=30
MAX_FAIL_COUNT=10
AUTO_DETECT_NETWORKS=false
MANUAL_SCAN_NETWORKS=172.19.228.0/24
MESHTASTIC_TCP_PORT=4403
SERIAL_PORT=/dev/ttyUSB0

# Generate secure passwords with:
# openssl rand -base64 24
